<%- include ../partials/header.ejs %>

<%- include ../partials/main-nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contacts Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Email</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Contacts Email"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Phone Number</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Contacts Number"
                    name="price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom-nav.ejs %>  

